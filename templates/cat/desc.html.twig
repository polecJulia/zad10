{% extends 'base.html.twig' %}

{% block title %}Cat index{% endblock %}

{% block body %}
    <head>


    </head>
    <body>

    <table class="table">
        <thead>
        <tr>

            <th>Id</th>
            <form method="get" action="name">
                <th>Name <button name="sort1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z"/>
                        </svg></button></th>
            </form>
            <form method="get" action="desc">
                <th>Age <button type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor" class="bi bi-arrow-down-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z"/>
                        </svg></button></th>
            </form>

            <th>IsAdoptable</th>
            <th>actions</th>

        </tr>
        </thead>

        <tbody>


        <img src="https://cataas.com/cat" class="img-circle" alt="Cinque Terre" width="304" height="236">
        {% for cat in cats|sort((a, b) => a.age <=> b.age) %}

            <tr>
                <td>{{ cat.id }}</td>
                <td>{{ cat.name }}</td>
                <td>{{ cat.age }}</td>
                <td>{{ cat.isAdoptable ? 'Yes' : 'No' }}</td>
                <td>


                    <a href="{{ path('app_cat_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('app_cat_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>



    </table>


    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-lg-6">
                <div class="text-left">
                    <a href="{{ path('app_cat_new') }}">Create new cat</a>
                    <a class="btn btn-primary" href="../cat/isAdoptable" role="button">Only Adoptable cats</a>
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6">
                <div class="text-right">


                </div>
            </div>
        </div>
    </div>
    </body>



{% endblock %}
